function hms_install() {
  $link = \Drupal\Core\Link::fromTextAndUrl(t('admin config page'), \Drupal\Core\Url::fromUri('internal:/admin/config/people/hms'));
  drupal_set_message(
    t(
      'For the HMS module to work properly, you still have to configure the module on the <a href=":link">configuration page</a>',
      [':link' => '/admin/config/people/hms']
    ),
    'warning'
  );
}

function hms_library_info_build() {
  $url = \Drupal::config('hms.settings')->get('user_manager_url');
  $libraries = [];
  $libraries['usermanager.app'] = [
    'dependencies' => [
      'core/jquery',
    ],
    'js' => [
      $url . '/usermanager/prod/js/libs.js' => [
        'type' => 'external',
      ],
      $url . '/usermanager/prod/js/app.js' => [
        'type' => 'external',
      ],
    ],
    'css' => [
      'module' => [
        $url . '/styles/hms-widget.css' => [
          'type' => 'external',
        ],
      ],
    ],
  ];
  return $libraries;
}

function hms_theme() {

  $theme['usermanager'] = [
    'variables' => [],
    'template' => 'usermanager',
  ];

  return $theme;
}